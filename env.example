# ==============================================
# EXPANDERS360 BACKEND CONFIGURATION (.env.example)
# ==============================================
# Copy this file to .env and update the values

# ==============================================
# APPLICATION
# ==============================================
NODE_ENV=development
PORT=3000

# ==============================================
# MYSQL DATABASE
# ==============================================
# Use "mysql" when running inside Docker Compose
MYSQL_HOST=mysql
MYSQL_PORT=3307
MYSQL_ROOT_PASSWORD=your_mysql_root_password_here
MYSQL_USER=your_mysql_user_here
MYSQL_PASSWORD=your_mysql_password_here
MYSQL_DB=expanders

# ==============================================
# MONGODB ATLAS
# ==============================================
# Example Atlas URI (replace <username>, <password>, <cluster>, <dbname>)
MONGO_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<dbname>?retryWrites=true&w=majority&appName=Cluster0

# ==============================================
# AUTH / JWT
# ==============================================
JWT_SECRET=your_jwt_secret_here
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here
JWT_EXPIRES_IN=3600s

# ==============================================
# SMTP (EMAIL)
# ==============================================
# For development, you can use Ethereal Email (https://ethereal.email/)
SMTP_HOST=smtp.ethereal.email
SMTP_PORT=587
SMTP_USER=your_smtp_username_here
SMTP_PASS=your_smtp_password_here
SMTP_FROM=noreply@expanders360.com

# ==============================================
# SECURITY
# ==============================================
THROTTLE_TTL=60
THROTTLE_LIMIT=60

# ==============================================
# CORS
# ==============================================
CORS_ORIGIN=http://localhost:3000

# ==============================================
# ADMIN CONFIGURATION
# ==============================================
ADMIN_EMAIL=admin@expanders360.com
